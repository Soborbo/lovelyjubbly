---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: string;
}

const { title, description, href, icon } = Astro.props;
---
<a
  href={href}
  class="block bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow p-6 border border-gray-100"
>
  <div class="text-4xl mb-4">{icon}</div>
  <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
  <p class="text-gray-600 text-sm">{description}</p>
  <span class="inline-block mt-4 text-primary font-medium text-sm">
    Learn more &rarr;
  </span>
</a>
