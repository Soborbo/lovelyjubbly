---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import CallbackForm from '../components/CallbackForm.astro';
---
<BaseLayout
  title="Man and Van Bristol | Affordable Moving Help | Lovely Jubbly Removals"
  description="Affordable man and van hire in Bristol. Perfect for small moves, single items, student relocations, eBay collections. Hourly rates, fully insured, reliable service. Call 01172 870 082 for a quote."
  canonical="/man-and-van/"
  slug="man-and-van"
  breadcrumbName="Man and Van Bristol"
>
  <Hero
    title="Man and Van Bristol"
    subtitle="Affordable, flexible moving help for smaller jobs"
    showCtas={true}
